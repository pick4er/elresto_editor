
/* fonts */
defineFont(font-family, filename, font-weight, font-style)
  @font-face
    font-family font-family
    font-weight font-weight
    font-style font-style
    font-display auto
    src url('./fonts/' + filename + '.ttf') format('truetype')

x(n = 1)
  $normalized = (n / $defaultFontSize)
  return 1rem * $normalized

flexCenter()
  display flex
  flex-flow row nowrap
  justify-content center
  align-items center

flexBetween()
  display flex
  flex-flow row nowrap
  justify-content space-between
  align-items center

flexStretch()
  display flex
  flex-flow row nowrap
  justify-content space-around
  align-items stretch
  width 100%

flexColumn()
  display flex
  flex-flow column nowrap

blockCenter()
  display block
  margin-left auto
  margin-right auto

textEllipsis()
  overflow hidden
  white-space nowrap
  text-overflow ellipsis

accentFont()
  color $black
  font-family $robotoBold
  text-decoration underline
  font-size x(13)

sectionNameFont()
  color $dark
  font-family $robotoBold
  text-decoration none
  font-size x(16)
  margin-top x(2)
  margin-bottom x(2)

textFont()
  font-size x(16)
  font-family $robotoLight
  color $black

regularTextFont()
  font-size x(18)
  font-family $robotoRegular
  color $dark
  font-style normal

remarkFont()
  font-size x(16)
  font-family $robotoLight
  color $black
  font-style italic

heavyTextFont()
  font-size x(20)
  font-family $robotoBold
  font-style normal
  color $dark

errorText()
  display block
  font-size x(12)
  color $error
  margin-top x(6)

successText()
  display block
  font-size x(12)
  color $success
  margin-top x(6)  

clearList()
  list-style none
  padding x(0)
  margin x(0)
